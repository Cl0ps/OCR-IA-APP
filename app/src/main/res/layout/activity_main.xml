<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal de la actividad. Uso RelativeLayout para posicionar
     elementos de forma flexible, especialmente los botones al fondo. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenedor para la imagen capturada. -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370sp" 
        android:layout_height="370sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp" />

    <!-- Área de texto para mostrar el resultado de la predicción.
         Lo meto en un ScrollView por si el texto es muy largo. -->
    <ScrollView
        android:id="@+id/resultScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_below="@id/imageView"
        android:layout_above="@id/captureButton" 
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" 
            android:gravity="center"
            android:textSize="18sp" />

    </ScrollView>

    <!-- Botón para iniciar la cámara. -->
    <Button
        android:id="@+id/captureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/playButton"
        android:text="Tomar Foto" />

    <!-- Botón para reproducir el audio. Inicialmente oculto. -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Reproducir Audio"
        android:visibility="gone" 
        tools:visibility="visible"/>

</RelativeLayout>
